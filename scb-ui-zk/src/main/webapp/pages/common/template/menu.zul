<div sclass="main-menu"  
	apply="org.zkoss.bind.BindComposer"
	viewModel="@id('vm') @init('com.jzaoralek.scb.ui.common.template.MenuVM')" >
	
	<hlayout spacing="0">
	
	<!--
	<div sclass="quick-buttons">
		<div sclass="qb-container" tooltip="quickButtons, position=after_start, delay=100">
			<button type="button" class="btn-success" />
			<button type="button" class="btn-info" style="left: -1px;" />
