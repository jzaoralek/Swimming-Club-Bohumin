		<menubar id="menubar" hflex="20" sclass="main-menu-bar" autodrop="true" apply="com.jzaoralek.scb.ui.common.template.MenuComposer" >
			<!-- Dashboard -->
			<menuitem
				label="Home"
				id="menu_dashboard"
				iconSclass="z-icon-home" 
				visible="@load(!vm.isUserLogged())"
				href="/" >
			</menuitem>
			
			<!-- Prihlaska -->
			<menuitem
				label="${c:l('txt.ui.menu.application')}" 
				id="menu_applicationToClub"
				iconSclass="z-icon-file-text" 
				visible="@load(!vm.isUserLogged())"
				href="/pages/public/prihlaska-do-klubu.zul" >
			</menuitem>
			
			<!-- Seznam prihlasek -->
			<menuitem style="text-align: center; width: 100px;"
				label="${c:l('txt.ui.menu.applications')}" 
				id="menu_applicationToClubList"
				iconSclass="z-icon-files-o" 
				visible="@load(vm.isUserLogged() and vm.isLoggedUserInRole('ADMIN'))"
				href="/pages/secured/seznam-prihlasek.zul" >
			</menuitem>
			
			<!-- Seznam kurzu -->
			<menuitem  style="text-align: center; width: 100px;"
				label="${c:l('txt.ui.menu.courses')}" 
				id="menu_courseList"
				iconSclass="z-icon-list-alt" 
				visible="@load(vm.isUserLogged() and vm.isLoggedUserInRole('ADMIN'))"
				href="/pages/secured/seznam-kurzu.zul" >
			</menuitem>
			
			<!-- Seznam ucastniku -->
			<menuitem style="text-align: center; width: 100px;"
				label="${c:l('txt.ui.common.participants')}" 
				id="menu_courseParticipantList"
				iconSclass="z-icon-child" 
				visible="@load(vm.isUserLogged() and vm.isLoggedUserInRole('ADMIN'))"
				href="/pages/secured/seznam-ucastniku.zul" >
			</menuitem>
			
